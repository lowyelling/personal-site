---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog" description="Blog posts">
  <h1>Blog</h1>
  <!-- <p class="text-muted">
    Shorter thoughts and updates. For longer essays, see
    <a href="https://lowyelling.substack.com" target="_blank" rel="noopener">Furniture Coins</a> on Substack.
  </p> -->

  <section class="mt-lg">
    {sortedPosts.length === 0 ? (
      <p class="text-muted">No posts yet. Check back soon!</p>
    ) : (
      <ul class="post-list">
        {sortedPosts.map((post) => (
          <li class="post-item">
            <a href={`/blog/${post.id}`}>
              <h2 class="post-title">{post.data.title}</h2>
            </a>
            <time class="post-date" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' })}
            </time>
            <p class="post-description">{post.data.description}</p>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .post-item {
    margin-bottom: var(--space-lg, 2rem);
    padding-bottom: var(--space-md, 1rem);
    border-bottom: 1px solid var(--color-border, #eee);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-title {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
  }

  .post-date {
    display: block;
    color: var(--color-text-muted, #666);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .post-description {
    margin: 0;
    color: var(--color-text-muted, #666);
  }
</style>

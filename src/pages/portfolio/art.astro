---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Art Portfolio" description="Visual work">
  <p><a href="/portfolio">&larr; Portfolio</a></p>

  <h1>Art</h1>
  <p class="text-muted">Visual work and experiments.</p>

  <section class="mt-lg">
    <p class="text-muted">Coming soon...</p>

    <!--
    Gallery layout for when you add images:
    <div class="gallery">
      <figure>
        <img src="/art/piece1.jpg" alt="Description" />
        <figcaption>Title, Year</figcaption>
      </figure>
    </div>
    -->
  </section>
</BaseLayout>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: var(--spacing-md);
  }

  figure {
    margin: 0;
  }

  figure img {
    width: 100%;
    height: auto;
    border-radius: 4px;
  }

  figcaption {
    margin-top: var(--spacing-sm);
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
</style>

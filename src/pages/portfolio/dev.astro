---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Dev Portfolio" description="Software projects">
  <p><a href="/portfolio">&larr; Portfolio</a></p>

  <h1>Dev</h1>
  <p class="text-muted">Software projects and experiments.</p>

  <section class="mt-lg">
    <article class="project">
      <h2>lowyelling.com</h2>
      <p class="text-muted">2025</p>
      <p>This website! Built with Astro and TypeScript.</p>
      <p><a href="https://github.com/lowyelling/personal-site" target="_blank" rel="noopener">GitHub</a></p>
    </article>

    <article class="project">
      <h2>[Project Name]</h2>
      <p class="text-muted">[Year]</p>
      <p>[Description]</p>
    </article>
  </section>
</BaseLayout>

<style>
  .project {
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .project:last-child {
    border-bottom: none;
  }

  .project h2 {
    margin-bottom: 0.25rem;
  }
</style>
